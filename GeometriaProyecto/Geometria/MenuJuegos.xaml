<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Biseccion.MenuJuegos">
    <ContentPage.Content>
        <ScrollView>
            <Grid>
                <BoxView Color="GreenYellow" Opacity="0.7"/>
                <StackLayout Padding="30,50" VerticalOptions="Center" Margin="20,0,20,0">
                    <Label Text="         BIENVENIDO!!!!" TextColor="Black" FontSize="Title" x:Name="BIENVENIDA"/>
                    <Label Text="        Elija una opcion" TextColor="Black" FontSize="Title" x:Name="titulo"/>
                    <Button Text="Adivinar Figura" BackgroundColor="White" CornerRadius="20" Clicked="Button_Clicked"/>
                    <Button Text="Preguntas y respuestas" BackgroundColor="White" CornerRadius="20" Clicked="Button_Clicked_1"/>
                    <Button Text="Area y perimetros" BackgroundColor="White" CornerRadius="20" Clicked="Button_Clicked_2"/>
                    <Image Source="pensando.png"/>
                </StackLayout>
            </Grid>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>